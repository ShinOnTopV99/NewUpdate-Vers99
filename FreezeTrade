local Players = game:GetService("Players")

-- Create GUI
local screenGui = Instance.new("ScreenGui", game.Players.LocalPlayer:WaitForChild("PlayerGui"))
screenGui.Name = "FreezeTradeGUI"
screenGui.ResetOnSpawn = false

local mainFrame = Instance.new("Frame", screenGui)
mainFrame.Size = UDim2.new(0, 350, 0, 300)
mainFrame.Position = UDim2.new(0.5, -175, 0.5, -150)
mainFrame.BackgroundColor3 = Color3.fromRGB(46, 26, 71) -- Dark violet
mainFrame.BorderSizePixel = 0
mainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
mainFrame.Active = true
mainFrame.Draggable = true
Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0, 16)

-- Title Bar
local title = Instance.new("TextLabel", mainFrame)
title.Size = UDim2.new(1, 0, 0, 40)
title.BackgroundColor3 = Color3.fromRGB(167, 139, 250) -- Soft lilac
title.Text = "ðŸ¦– Grow A Garden Freeze Trade"
title.Font = Enum.Font.GothamBold
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.TextSize = 16
title.BorderSizePixel = 0
Instance.new("UICorner", title).CornerRadius = UDim.new(0, 12)

-- Instruction Label
local instruction = Instance.new("TextLabel", mainFrame)
instruction.Size = UDim2.new(1, -20, 0, 30)
instruction.Position = UDim2.new(0, 10, 0, 50)
instruction.BackgroundTransparency = 1
instruction.Text = "Find Player to Freeze Trade"
instruction.Font = Enum.Font.GothamBold
instruction.TextColor3 = Color3.fromRGB(200, 175, 255)
instruction.TextSize = 14
instruction.TextXAlignment = Enum.TextXAlignment.Left

-- Input
local userBox = Instance.new("TextBox", mainFrame)
userBox.Size = UDim2.new(0.7, -10, 0, 30)
userBox.Position = UDim2.new(0.05, 0, 0, 90)
userBox.PlaceholderText = "Enter username"
userBox.Font = Enum.Font.Gotham
userBox.TextSize = 14
userBox.TextColor3 = Color3.fromRGB(0, 0, 0)
userBox.BackgroundColor3 = Color3.fromRGB(245, 240, 255)
Instance.new("UICorner", userBox).CornerRadius = UDim.new(0, 8)

-- Search button
local searchBtn = Instance.new("TextButton", mainFrame)
searchBtn.Size = UDim2.new(0.25, 0, 0, 30)
searchBtn.Position = UDim2.new(0.72, 0, 0, 90)
searchBtn.Text = "Search"
searchBtn.Font = Enum.Font.GothamBold
searchBtn.TextSize = 14
searchBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
searchBtn.BackgroundColor3 = Color3.fromRGB(167, 139, 250)
Instance.new("UICorner", searchBtn).CornerRadius = UDim.new(0, 8)

-- Result Label
local resultLabel = Instance.new("TextLabel", mainFrame)
resultLabel.Size = UDim2.new(0.9, 0, 0, 40)
resultLabel.Position = UDim2.new(0.05, 0, 0, 140)
resultLabel.Text = ""
resultLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
resultLabel.TextSize = 16
resultLabel.Font = Enum.Font.GothamMedium
resultLabel.BackgroundColor3 = Color3.fromRGB(120, 90, 180)
Instance.new("UICorner", resultLabel).CornerRadius = UDim.new(0, 8)

-- Freeze Button
local freezeBtn = Instance.new("TextButton", mainFrame)
freezeBtn.Size = UDim2.new(0.9, 0, 0, 40)
freezeBtn.Position = UDim2.new(0.05, 0, 1, -50)
freezeBtn.Text = "FREEZE TRADE"
freezeBtn.Font = Enum.Font.GothamBold
freezeBtn.TextSize = 16
freezeBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
freezeBtn.BackgroundColor3 = Color3.fromRGB(167, 139, 250)
Instance.new("UICorner", freezeBtn).CornerRadius = UDim.new(0, 12)

-- Functionality
searchBtn.MouseButton1Click:Connect(function()
	local name = userBox.Text
	local target = Players:FindFirstChild(name)
	if target then
		resultLabel.Text = name
	else
		resultLabel.Text = "Player not found"
	end
end)

freezeBtn.MouseButton1Click:Connect(function()
	local name = resultLabel.Text
	if name ~= "" and Players:FindFirstChild(name) then
		-- Add your Freeze logic here
		warn("Freeze trade on player:", name)
	end
end)
